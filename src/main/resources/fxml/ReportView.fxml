<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <Button fx:id="loadDataButton" mnemonicParsing="false" text="Загрузить" />
            <Label fx:id="fileName" />
            <ProgressBar fx:id="loadProgressBar" prefWidth="200.0" progress="0.0" visible="false" />
         </items>
      </ToolBar>
   </top>
   <center>
      <SplitPane dividerPositions="0.2" BorderPane.alignment="CENTER">
        <items>
            <ListView fx:id="prepList" prefHeight="200.0" prefWidth="200.0" />
            <WebView fx:id="resultBox" prefHeight="-1.0" prefWidth="-1.0" />
        </items>
      </SplitPane>
   </center>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <Label text="С" />
            <DatePicker fx:id="fromField" />
            <Label text="По" />
            <DatePicker fx:id="toField" />
            <Separator orientation="VERTICAL" />
            <Pane HBox.hgrow="ALWAYS" />
            <Separator orientation="VERTICAL" />
            <Button fx:id="prepReportButton" mnemonicParsing="false" text="Отчет оп преподавателю" />
            <Button fx:id="fullReportButton" mnemonicParsing="false" text="Полный отчет" />
         </items>
      </ToolBar>
   </bottom>
</BorderPane>
